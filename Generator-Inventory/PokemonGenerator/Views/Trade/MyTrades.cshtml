@model PokemonGenerator.Models.MyTradesViewModel


<h2>Accepted Trades</h2>

@if (Model.AcceptedTrades.Any())
{
    foreach (var trade in Model.AcceptedTrades)
    {
        <div>
            <p>From: @trade.RequesterEmail</p>
            <p>Offered: @trade.RequesterPokemonName</p>
            <img src="@trade.RequesterPokemonSprite" alt="@trade.RequesterPokemonName" />
            <p>Requested: @trade.ReceiverPokemonName</p>
            <img src="@trade.ReceiverPokemonSprite" alt="@trade.ReceiverPokemonName" />
            <p>Status: @trade.Status</p>
        </div>
        
    }
}
else
{
    <p>No accepted trades.</p>
}


<h2>Rejected Trades</h2>

@if (Model.RejectedTrades.Any())
{
    foreach (var trade in Model.RejectedTrades)
    {
        <div>
            <p>From: @trade.RequesterEmail</p>
            <p>Offered: @trade.RequesterPokemonName</p>
            <img src="@trade.RequesterPokemonSprite" alt="@trade.RequesterPokemonName" />
            <p>Requested: @trade.ReceiverPokemonName</p>
            <img src="@trade.ReceiverPokemonSprite" alt="@trade.ReceiverPokemonName" />
            <p>Status: @trade.Status</p>
        </div>
        
    }
}
else
{
    <p>No rejected trades.</p>
}
